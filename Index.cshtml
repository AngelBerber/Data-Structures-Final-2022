@model Hotel_Booking_Final.Models.HotelModel;



@{

   Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
<title> Quick Book </title>
<meta charset="utf-8" name="viewport" content="width-device-width"/>
<link rel="stylesheet" type="text/css" href="HotelBookingFinal.css"/>


<style>

.mainContainer {
    width: 95%;
    min-height: 100vh;
    background: linear-gradient( to top, #150050 0%, #150050 50%, #000000 50%, #000000 100% );
}

.mainText {
    color: white;
}
.mainHeaders{
    font-style:italic;
    color: white;
    font-size: 75px;
}
header {
    width: 95%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    margin: 75px;
    color: white;
}


::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    border-radius: 100px;
    margin-block: .5px;
}


::-webkit-scrollbar-thumb {
    background: black;
    border: .25px;
    border-radius: 100px;
}

    ::-webkit-scrollbar-thumb:hover {
        background: black;
    }

nav li a:hover {
    background-color: #3F0071;
    border: 2px white;
    border-radius: 20px;
    text-decoration: none;
}

nav li a:visited {
    color: #FFFFFF;
    text-decoration: none;
}

nav li a:active {
    color: black;
    text-decoration: none;
}

nav ul {
    display: flex;
    justify-content: space-around;
    background-color: Black;
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    text-decoration: none;
    border-radius: 20px;
    border: 2px solid #FB2576;
}

li a {
    font-weight: bold;
    text-decoration: none;
    color: white;
    display: block;
    padding: 10px;
    margin-left: 50px;
}

.tableClass{

    background-color:white;
    width:50%;
    text-align:center;
    border-radius:20px;
    text-shadow: 2px 2px 4px #FFFFFF;
    font-style:oblique;
}

button{

    background-color:white;
    width: 25%;
    text-align:center;
    border-radius:20px;

}

.enterForm{
    display:flex;
    flex-direction: column;
    justify-content:center;
    background:white;
    border:2px solid black;
    border-radius:20px;
    flex:auto;
    text-align:center;
    width:35%;
    margin-left:65%;
    margin-bottom:75%;
    text-shadow: 2px 2px 4px #FFFFFF;
    font-style:oblique;

}

.enterBoxes {

     margin:8px;



}
.tableColumns{

    text-shadow: 2px 2px 4px #FFFFFF;
    font-style:oblique;
    font-size:25px;
    color: #3F0071;

}




</style>


</head>

<!--Main page-->
<body class = "mainContainer">

<!--Header-->
<header>




<nav>
<ul>

<li> <a asp-area="" asp-controller="Home" asp-action="AboutUs">Home</a> </li>
<li> <a asp-area="" asp-controller="Home" asp-action="Bookings">Bookings</a></li>
<li> <a asp-area="" asp-controller="Home" asp-action="Rooms">Rooms</a></li>
<li> <a asp-area="" asp-controller="Home" asp-action="AboutUs">About us</a> </li>


</ul>
</nav>
</header>
<!--Header end-->

<!-- Middle -->

<h1 class= "mainHeaders">Bookings</h1>
<form asp-action="Index" method="post">

    <table class="tableClass">
        
<tr>
    
    <td class="tableColumns">Room Number</td>
    <td class="tableColumns">Availability</td>
    <td class="tableColumns">Price</td>
  </tr>
  
 
 
  <!--Sorting buttons-->
  <input type="submit" name="answer" value="Sort by Room Availability" class="enterBoxes" />
  <input type="submit" name="answer" value="Sort by Room Number" class="enterBoxes" />
  <input type="submit" name="answer" value="Sort by Room Price" class="enterBoxes" />
  
  
  
  <tr>
      <td>@ViewBag.showRooms</td>
      <td>@ViewBag.showOpen</td>
      <td>@ViewBag.showPrice</td>

  </tr>
 
  

  <p class = "mainText"> 
    
    </p> 

    </table>


     </form>

<div class="enterForm" > 
 <form asp-action="Index" method="post">
     <h2>Booking Form</h2>
     <h4>Your ID #@ViewBag.UserID</h4>
 <div class="enterBoxes">
 <label asp-for="newName">Enter name</label>
 <input asp-for="newName" />
 </div>
<div class="enterBoxes">
 <label asp-for="newRoomNumber">Room number</label>
 <input asp-for="newRoomNumber" />
 </div>
<div class="enterBoxes">
 <label asp-for="newPhoneNumber"> Phone number</label>
 <input asp-for="newPhoneNumber">
 </div>
<div class="enterBoxes">
 <label asp-for="newUserID"> User ID</label>
 <input asp-for="newUserID">
 </div>
<div class="enterBoxes">
 <label> Booking information</label>
 <input value="@ViewBag.bookTheRoom" readonly />
 </div>

 
 <button class="enterBoxes" type="submit">Book now</button>
 <a asp-action="Index">Clear</a>
 </form>



 <!--Wait list form-->

  <form asp-action="Index" method="post">
     <h2>Waiting List form</h2>
 <div class="enterBoxes">
 <label asp-for="newName_waitList">Enter name</label>
 <input asp-for="newName_waitList" />
 </div>
<div class="enterBoxes">
 <label asp-for="newRoomNumber_waitList">Room number</label>
 <input asp-for="newRoomNumber_waitList" />
 </div>
<div class="enterBoxes">
 <label asp-for="newPhoneNumber_waitList"> Phone number</label>
 <input asp-for="newPhoneNumber_waitList">
 </div>
<div class="enterBoxes">
 <label asp-for="newUserID_waitlist"> User ID</label>
 <input asp-for="newUserID_waitlist">
 </div>
<div class="enterBoxes">
 <label> Booking information</label>
 <input value="@ViewBag.waiting" readonly />
 </div>


 <button class="enterBoxes" type="submit">Book now</button>
 <a asp-action="Index">Clear</a>
 </form>

 </div> <!-- enterForm css class -->


<!-- End of middle -->

<!--footer-->
<footer>



</footer>
<!--footer end-->



</body>
<!--Main page end-->
</html>